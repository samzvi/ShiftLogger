@model ShiftLogger.Models.Car

@{
    ViewData["Title"] = "Create Car";
    Layout = "_Layout";
}

<div class="container border p-4 w-100" style="max-width: 500px;">
    <h2 class="text-center mb-4">Vytvořit auto</h2>
    <form asp-action="CreateCar" method="post">
        <div class="form-group">
            <label for="spz">SPZ</label>
            <input type="text" class="form-control" id="spz" name="SPZ" placeholder="1AB2345" required>
            <span asp-validation-for="SPZ" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="name">Název</label>
            <input type="text" class="form-control" id="name" name="Name" placeholder="Škoda Octavia" required>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="Marker">Označení</label>
            <input type="text" class="form-control" id="marker" name="Marker" placeholder="GAL00" required>
            <span asp-validation-for="Marker" class="text-danger"></span>
        </div>
        <div class="text-center">
            <button type="submit" class="btn btn-primary btn-lg w-100">Vytvořit</button>
        </div>
    </form>

    <div class="mt-3 text-center">
        <a asp-action="Index" class="btn btn-secondary">Zpět</a>
    </div>
</div>
