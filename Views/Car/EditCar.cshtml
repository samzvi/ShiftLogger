@model ShiftLogger.Models.Car

@{
    ViewData["Title"] = "Edit Car";

    Layout = "_Layout";
}

<div class="container border p-4 w-100" style="max-width: 500px;">
    <h2 class="text-center mb-4">Upravit auto</h2>
    <form asp-action="Edit" method="post">
        <div class="form-group">
            <label asp-for="Marker">Označení</label>
            <input asp-for="Marker" class="form-control border-secondary" id="nick" />
            <span asp-validation-for="Marker" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="SPZ">SPZ</label>
            <input asp-for="SPZ" class="form-control border-secondary" id="spz" />
            <span asp-validation-for="SPZ" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Name">Auto</label>
            <input asp-for="Name" class="form-control border-secondary" id="name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="text-center">
            <button type="submit" class="btn btn-primary btn-lg w-100">Uložit</button>
        </div>

    </form>
    <div class="text-center mt-4 w-100 d-flex justify-content-between">
            <button type="button" class="btn btn-danger" id="deleteButton">Smazat</button>
            <div id="hiddenButtons" style="display: none">
                <form asp-action="Delete" asp-route-id="@Model.Id" method="post" id="deleteConfirm">
                    <button type="button" class="btn btn-secondary" id="deleteCancel">Zrušit</button>
                    <button type="submit" class="btn btn-danger">Potvrdit</button>
                </form>
            </div>
        <a asp-action="Index" class="btn btn-secondary">Zpět</a>
    </div>
</div>
