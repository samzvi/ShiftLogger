@model IEnumerable<ShiftLogger.Models.User>

@{
    ViewData["Title"] = "Správa uživatelů";
    Layout = "_Layout";
}

<div class="m-4 w-100">
    <h2 class="mb-4 text-center">Správa uživatelů</h2>

    <div class="table-responsive w-100">
        <table class="table table-striped table-bordered table-hover w-50 mx-auto">
            <thead>
                <tr class="text-truncate text-center">
                    <th class="p-1">Jméno</th>
                    <th class="p-1">Email</th>
                    <th class="p-1">Role</th>
                    <th class="p-1">Akce</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr class="text-truncate text-center">
                        <td class="p-2 p-lg-3 p-md-3 small">@user.UserName</td>
                        <td class="p-2 p-md-3 small">@user.Email</td>
                        <td class="p-2 p-md-3 small">
                            @(user.Role == ShiftLogger.Models.User.UserRole.Admin ? "Správce" : "Řidič")
                        </td>
                        <td class="p-1 p-md-2">
                            <a asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-primary btn-sm">Upravit</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
        <a asp-action="CreateUser" class="btn btn-success mt-2 d-block mx-auto" style="width:250px">Vytvořit uživatele</a>
</div>
